<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/relative"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/lnLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
  <LinearLayout
        android:id="@+id/lnLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
        android:id="@+id/my_himage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_margin="3dp"
        android:src="@drawable/ic_launcher" />

      

         <LinearLayout
        android:id="@+id/lnLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_mytell_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:text="时间"
            android:textColor="@color/gray"
            android:textSize="20dp" />
     
          </LinearLayout>

         <TextView
             android:id="@+id/tell_id"
             android:layout_width="wrap_content"
             android:layout_marginTop="15dp"
             android:visibility="invisible"
             android:layout_height="wrap_content"
             android:text="tell_id" />

         <ImageView
             android:id="@+id/image_delet"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginTop="6dp"
             android:layout_marginLeft="110dp"
             android:src="@drawable/delete" />

    </LinearLayout>
       

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     
        android:layout_below="@+id/lnLayout1"
      
        android:layout_marginTop="4dp"
        android:orientation="vertical" >
   <TextView
            android:id="@+id/mytell_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:textSize="16sp"
            android:gravity="left"
            android:text="内容" />

        <ImageView
            android:id="@+id/mytell_image"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="3dp"
          
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

</RelativeLayout>