<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="vertical" >

         <TextView
            android:id="@+id/stra_all_stratitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/skyblue"
            android:gravity="center"
            android:visibility="gone"
            android:text="stra_all_stratitle"
            android:textSize="30px" />

         <ImageView
             android:id="@+id/strat_image"
             android:layout_width="match_parent"
             android:layout_height="230dp"
             android:scaleType="fitXY"
             android:src="@drawable/ic_launcher" />

         <TextView
             android:id="@+id/stra_username"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="right"
             android:layout_marginRight="20dp"
             android:textSize="@dimen/text_size_large"
             android:text="username" />
        <LinearLayout
      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:orientation="horizontal" >
         <ImageView
             android:id="@+id/talk"
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:layout_margin="2dp"
             android:src="@drawable/talk" />
         <TextView
             android:id="@+id/stra_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="185dp"
             android:textColor="@color/gray"
             android:text="stra_time" />

        

          </LinearLayout>
           <TextView
             android:id="@+id/stra_all_content"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="3dp"
             android:text="stra_all_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="2dp" >
        <ImageView
            android:id="@+id/imagegoodb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="2dp"
            android:src="@drawable/goodb" />
        <ImageView
            android:id="@+id/stra_good_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:src="@drawable/goodw" />

        <TextView
            android:id="@+id/stra_good"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="2dp"
            
            android:textSize="15sp"
            android:text="stra_good" />

       

        <TextView
            android:id="@+id/note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="80dp"
            android:text="点击收藏" />

        <ImageView
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/collectw" />
         <ImageView
            android:id="@+id/collecty"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/collecty" />

    </LinearLayout>

</RelativeLayout>